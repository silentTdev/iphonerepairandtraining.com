@{
    ViewData["Title"] = "About";
}
 <div class="container" id="gamingbody">
    <div class="row">
        <div class="row">
            <div class="col-sm-12">
                <h1>WiseGuys Gaming Lounge & Cafe</h1>
                <h3>Game while we repair your device!</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">

                <img src="images/intensegaming.jpg" class="gamingimage" alt="intense gaming">
                <h3>Compete!</h3>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">

                <img src="images/relaxedgaming.jpg" class="gamingimage" alt="intense gaming">
