                    <img src="images/grandtheft.jpg" class="game" alt="grand theft auto">
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-1 gamediv">
                    <img src="images/overwatch.jpg" class="game" alt="overwatch">
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-1 gamediv">
                    <img src="images/madden.jpg" class="game" alt="madden">
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-1 gamediv">
                    <img src="images/fifa.jpg" class="game" alt="fifa">
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-1 gamediv">
                    <img src="images/nba.jpg" class="game" alt="nba 2k17">
                </div>
                <div class="hidden-xs hidden-sm hidden-md col-lg-1 gamediv">
                    <img src="images/leagueoflegends.jpg" class="game" alt="nba 2k17">
                </div>
